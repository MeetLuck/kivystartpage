<MyStartBox>:
    orientation : 'vertical'
    padding : 5
    spacing : 5
    #md_bg_color : 0,0,0.15,1

<TopBox@MDBoxLayout>:
    orientation: 'horizontal'
    padding: 1
    spacing: 5
    #md_bg_color: 0,0,1,0.5
    size_hint: 1, 0.75

<NotificationBox@MDBoxLayout>:
    orientation: 'vertical'
    padding: 1
    spacing: 0
    #md_bg_color: 0.2,0,0,1
    line_color: 0.3,0.3,0.3,1
    line_width: 1
    size_hint: 1, 0.2

<StatusBox>:
    orientation: 'horizontal'
    padding: 3
    spacing: 0
    #md_bg_color: 0.2,0,0,1
    line_color: 0.3,0.3,0.3,1
    line_width: 1
    size_hint: 1, 0.05

<TopLeftBox@MDBoxLayout>:
    orientation: 'vertical'
    padding: 1
    spacing: 5
    size_hint: 0.66, 1

<TopRightBox@MDBoxLayout>:
    orientation: 'vertical'
    padding: 1
    spacing: 5
    #md_bg_color: 0,0,0.3,1
    size_hint: 0.34, 1

<TopLeftTopBox@MDBoxLayout>: #MDBoxLayout:
    orientation:'horizontal'
    #md_bg_color: 0,0,0.2,1
    size_hint: 1, 0.2
    padding: 10
    spacing: 20
    line_color: 0.2,0.2,0.2,1
    line_width: 1
    #md_bg_color: 0,0,0.5,0.5
    #line_color: 0.3,0.3,0.3,1
    #line_width: 1

<TopLeftBottomGrid@MDGridLayout>:
    cols : 2
    size_hint: 1, 0.8

<MyFilesBox>:
    orientation: 'vertical'
    size_hint: 1,0.2
    line_color: 0.2,0.2,0.2,1
    #md_bg_color: 0,0.2,0,1

<MyCmdsBox>:
    orientation: 'vertical'
    size_hint: 1,0.25
    line_color: 0.2,0.2,0.2,1
    #md_bg_color: 0,0.2,0,1

<MyFoldersBox>:
    size_hint: 1,0.25
    pos_hint:{'center_x':0.5, 'center_y':0.5}
    line_color: 0.2,0.2,0.2,1
    #md_bg_color: 0,0,0.2,1

<MyServicesBox>:
    #orientation: 'vertical'
    size_hint: 1,0.25
    pos_hint:{'center_x':0.5, 'center_y':0.5}
    line_color: 0.2,0.2,0.2,1
    #md_bg_color: 0.2,0,0,1

<MyWeeklyReportGrid>:
    pos_hint:{'center_x':0.47, 'center_y':0.5}
    #md_bg_color: 0.2,0,0,1

<MyMonthlyReportGrid>:
    pos_hint:{'center_x':0.47, 'center_y':0.5}
    #md_bg_color: 0.2,0,0,1

<MyDdayBox>:
    pos_hint:{'center_x':0.52, 'center_y':0.5}
    #md_bg_color: 0.2,0,0,1

<PatrolPostFloat@MDFloatLayout>:
    md_bg_color: 0,0,0.12,1
    line_color: 0.2,0.2,0.2,1
    line_width: 5

<DongInfoBox@MDBoxLayout>:
    orientation: 'vertical'

<MoveInOutBox>:
    orientation: 'vertical'
    pos_hint:{'center_x':0.5, 'center_y':0.5}
    #md_bg_color: 0,0,0.12,1
    line_color: 0.2,0.2,0.2,1
    line_width: 5

<MyPatrolBox>:
    pos_hint: {'center_x':0.5, 'center_y':0.77}
    line_color: 0.2,0.2,0.2,1
    line_width: 1

<ApplicationBox>:
    orientation: 'vertical'
    line_color: 0.2,0.2,0.2,1
    line_width: 1

<MyPostGrid>:
    pos_hint: {'center_x':0.5, 'center_y':0.25}
    padding : 0
    spacing : 1
    #Image:
    #   source: 'images/dong_post.png'
    #   size: self.texture_size

<MyStartBox>:
    mycalendar: id_mycal
    offworkers: id_offworkers
    myfiles: id_myfilesbox
    #status: id_status
    TopBox:
        TopLeftBox:
            TopLeftTopBox: #MDBoxLayout:
                MyCalendar:
                    id: id_mycal
                    size_hint: 0.4,1
                OffBox:
                    id: id_offworkers
                    size_hint: 0.6,1
            TopLeftBottomGrid: #MDGridLayout:
                DongInfoBox:
                    size_hint: 0.3,1
                    MoveInOutBox: # 전출입 및 승강기 사용현황
                        size_hint: 1,0.35
                    ApplicationBox:
                        size_hint: 1,0.25
                    MDBoxLayout:
                        size_hint: 1,0.4
                PatrolPostFloat:
                    size_hint: 0.7,1
                    MyPatrolBox:
                        id: id_mypatrol
                        size_hint: 0.6,0.4
                    MyPostGrid:
                        size_hint: 0.95,0.5
        TopRightBox: # Top Right Box
            MyFilesBox:
                id: id_myfilesbox
            MyCmdsBox:
                id: id_mycmdsbox
            MyFoldersBox:
            MyServicesBox:
        
    NotificationBox: # Bottom Box
        MyWeeklyReportGrid: 
            id: id_weeklyreport
        MyMonthlyReportGrid: 
            id: id_monthlyreport
        MyDdayBox:
        MDBoxLayout:
            Label:
                text: 'Todo'
    StatusBox:
        id: id_statusbox
